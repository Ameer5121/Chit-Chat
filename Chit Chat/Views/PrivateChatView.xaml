<UserControl x:Class="ChitChat.Views.PrivateChatView"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Helper="clr-namespace:ChitChat.Helper"
             xmlns:local="clr-namespace:ChitChat.Views"
             mc:Ignorable="d" 
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}"
             Width="678" 
             Height="525"
             >
    <UserControl.Resources>
        <Helper:TextAlignmentConverter x:Key="FlowDirectionConverter"></Helper:TextAlignmentConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--Black Border & Exit Button-->
        <Border Background="#FF2C2B2B" Grid.Row="0">
            <DockPanel LastChildFill="False">
                <Button BorderBrush="Transparent" Style="{StaticResource ExitButton}" Command="{Binding OnPrivateChatExit}"
                        Click="OnExitClick"
                        Width="53" DockPanel.Dock="Right">
                    <Image Source="/Resources/Exit.png" Height="44" Width="53"></Image>
                </Button>
                <TextBlock Width="336" VerticalAlignment="Center" Margin="0,14">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Privately chatting to {0}">
                            <Binding Path="SelectedUser.DisplayName" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DockPanel>
        </Border>

        <!--Message Window-->
        <materialDesign:Card Grid.Row="1" Background="#FF2E2E2E" UniformCornerRadius="5" Margin="0,0,0,41" Grid.RowSpan="2">
            <ListView x:Name="PrivateMessagesListView" Grid.Column="1" 
                  Background="Transparent" 
                  Grid.Row="1"                   
                  Grid.RowSpan="2"
                  ItemsSource="{Binding PrivateMessages}"
                  RenderTransformOrigin="0.5,0.5"
                  HorizontalContentAlignment="Stretch"
                  Helper:ScrollBehavior.ScrollOnNewItem="True">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock>                              
                            <Run Text="{Binding User.DisplayName}" Foreground="Silver"></Run>
                            <Run Text=""></Run>
                            <Run Text="{Binding MessageDate, StringFormat=t}" Foreground="Gray" FontSize="10"></Run>

                                <TextBlock.TextAlignment>
                                    <MultiBinding Converter="{StaticResource FlowDirectionConverter}">
                                        <Binding Path="DataContext.CurrentUser" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=ListView}"/>
                                        <Binding Path="User.DisplayName"></Binding>
                                    </MultiBinding>
                                </TextBlock.TextAlignment>
                                
                            </TextBlock>
                            <FlowDocumentScrollViewer x:Name="PrivateDocumentViwer"
                                                      Height="35"         
                                                      HorizontalContentAlignment="Stretch"
                                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                      Padding="-11" VerticalContentAlignment="Center"
                                                      >
                                <FlowDocumentScrollViewer.Document>
                                    <MultiBinding Converter="{StaticResource FlowDirectionConverter}" ConverterParameter="FlowDocument">
                                        <Binding Path="DataContext.CurrentUser" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=ListView}"/>
                                        <Binding Path="User.DisplayName"></Binding>
                                        <Binding Path="Message"></Binding>
                                        <Binding ElementName="PrivateDocumentViwer"></Binding>
                                    </MultiBinding>
                                </FlowDocumentScrollViewer.Document>
                            </FlowDocumentScrollViewer>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </materialDesign:Card>


        <!--Chat typing-->
        <materialDesign:Card 
            UniformCornerRadius="5"
            Grid.Row="2" Background="#FF303030" Margin="0,0,2,0">
            <RichTextBox VerticalAlignment="Center"
                     x:Name="PrivateChatTextBox"
                     FontSize="15"
                     materialDesign:HintAssist.Hint="Message"
                     Height="37"
                     VerticalContentAlignment="Center"
                     CaretBrush="White"
                     materialDesign:TextFieldAssist.UnderlineBrush="AliceBlue" Margin="0,4,34,4">
                <RichTextBox.InputBindings>
                    <KeyBinding CommandParameter="{Binding SelectedUser}" Command="{Binding Send}" Key="Enter" />
                </RichTextBox.InputBindings>

            </RichTextBox>
        </materialDesign:Card>

        <Button Background="Transparent" BorderBrush="Transparent" DockPanel.Dock="Right" Width="30"  Click="Emoji_Click" Margin="646,0,2,0" Height="Auto" Padding="0" Grid.Row="2">
            <Image Source="/Resources/Emojis/Grin.png" Height="33" Width="31"/>
        </Button>

        <!--Emoji Window-->
        <materialDesign:Transitioner x:Name="EmojiTransitioner" Grid.Row="1" Panel.ZIndex="1" SelectedIndex="1" Margin="260,92,10,10" Height="333" Width="408">
            <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                <local:EmojiView Margin="0,0,0,-1"></local:EmojiView>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom}">

            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>

    </Grid>
</UserControl>
