<UserControl x:Class="ChitChat.Views.PasswordRecoveryView2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChitChat.Views"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{StaticResource HomeWindow}"
             mc:Ignorable="d" 
             Height="519" Width="654.5">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Please type the code that has been sent to you" 
                   TextWrapping="Wrap" 
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="15"
                   Width="Auto"
                   Grid.Row="0"
                   Grid.Column="1"
                   TextAlignment="Left" Margin="0,84,0,0" Grid.RowSpan="2"/>

        <DockPanel Grid.Row="1" Grid.Column="1" LastChildFill="False" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <materialDesign:PackIcon Kind="Code" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,20,0,0" Height="25" Width="22"/>
            <!--Code-->
            <TextBox HorizontalAlignment="Right" 
                 Margin="0,0,0,0"
                 Width="300"
                 Height="50"
                 FontSize="20"
                 BorderBrush="White"
                 Text="{Binding RecoveryEmail, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:TextFieldAssist.UnderlineBrush="DimGray"
                 CaretBrush="White"
                 Foreground="AliceBlue"   
                 materialDesign:HintAssist.Hint="Code"
                 materialDesign:HintAssist.Foreground="AntiqueWhite"/>
        </DockPanel>
        
        <Button Grid.Column="2"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Content="Verify Code" 
            FontSize="15"
            Height="Auto"                 
            Width="150"
            Margin="0,0,0,-15"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="White"
            Background="#303338"
            BorderBrush="#FF2C2B2B"/>

        <DockPanel Grid.Row="2" Grid.Column="1" LastChildFill="False" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <materialDesign:PackIcon Kind="Password" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,20,0,0" Height="25" Width="22"/>
            <!--Code-->
            <TextBox HorizontalAlignment="Right" 
                 Margin="0,0,0,0"
                 Width="300"
                 Height="50"
                 FontSize="20"
                 BorderBrush="White"
                 IsEnabled="{Binding CodeVerified}"
                 Text="{Binding RecoveryEmail, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:TextFieldAssist.UnderlineBrush="DimGray"
                 CaretBrush="White"
                 Foreground="AliceBlue"   
                 materialDesign:HintAssist.Hint="Password"
                 materialDesign:HintAssist.Foreground="AntiqueWhite"/>
        </DockPanel>

        <Button Grid.Column="2"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Content="Change Password" 
            FontSize="15"
            Height="Auto"                 
            Width="151"
            Margin="0,0,0,-15"
            Grid.Row="2"
            IsEnabled="{Binding CodeVerified}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="White"
            Background="#303338"
            BorderBrush="#FF2C2B2B"/>

        <!--Back-->
        <Button 
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Grid.Row="4"
            Content="Back" 
            FontSize="25"
            Height="50"
            Width="155"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
            Foreground="White"
            Background="#303338"
            BorderBrush="#FF2C2B2B"></Button>

        <TextBlock Text="{Binding RecoveryStatus}" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1"></TextBlock>
    </Grid>
</UserControl>
